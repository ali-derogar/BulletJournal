# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Backend Environment Variables (used by docker-compose)
# Database Configuration
# For SQLite (default): sqlite:///./data/bullet_journal.db
# For PostgreSQL: postgresql://user:password@postgres:5432/bulletjournal
DATABASE_URL=sqlite:///./data/bullet_journal.db

# JWT Configuration
# IMPORTANT: Change this to a secure random string in production
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 1 day

# AI Configuration
# Get your API keys from: https://openrouter.ai/keys
NEXT_PUBLIC_OPENROUTER_API_KEYS=your-openrouter-api-key-here
NEXT_PUBLIC_DEFAULT_AI_PROVIDER=openrouter
NEXT_PUBLIC_DEFAULT_AI_MODEL=google/gemma-3-27b-it:free

# API Configuration
# Change this to your actual backend URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# Development only
OPENROUTER_API_KEY=your-openrouter-api-key-here

# AI Coach Scheduler
AI_DIGEST_SCHEDULER_ENABLED=true
AI_DIGEST_SCHEDULER_INTERVAL_SECONDS=60
